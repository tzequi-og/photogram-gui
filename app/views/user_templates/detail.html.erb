<h1> <%= @user.username %> </h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %>
  <dt>Edit user</dt>
  <dd>
    <form action="/update_user/<% @user.id %>" method="post">
      <label for="user_update">Username</label>
      <input type="text" id="user_update" name="new_username" value="<%= @user.username %>">
    </form>
  </dd>
</dl>

<h2>Own photos</h2>

<table border="1">
  <tbody>
    <tr>
      <th>Image</th>
      <th>Owner</th>
      <th>Caption</th>
      <th>Posted</th>
      <th></th>
    </tr>
    <% @photos.each do |photo| %>
    <tr>
      <td><img src="<%= photo.image %>"></td>
      <td><%= @user.username %></td>
      <td><%= photo.caption %></td>
      <td><%= photo.created_at %></td>
      <td><a href="/photos/<%= photo.id %>">Show details</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
